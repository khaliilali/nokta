#!/bin/bash

STAT=$(nordvpn status | awk '{print $2}' | head -n 2 | tail -n 1)
if test $STAT = "Connected"; then
  echo $(nordvpn status | awk '{print $2}' | head -n 4 | tail -n 1)
elif test $STAT = "Connecting"; then
  echo "connecting..."
elif test $STAT = "Disconnected"; then
  echo "NordVPN"
fi
